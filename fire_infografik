<script>
    document.addEventListener('DOMContentLoaded', () => {
        const calmConfidencePalette = {
            primary: '#1a535c', 
            secondary: '#4a7c59',
            accent: '#d69f7e', 
            accentStrong: '#ff6b6b', 
            neutral: '#f8fafc', 
            text: '#334155',
            textLight: '#64748b',
            white: '#ffffff'
        };

        function wrapLabel(label) {
            const maxLen = 16;
            if (typeof label !== 'string' || label.length <= maxLen) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = '';
            for (const word of words) {
                if ((currentLine + ' ' + word).trim().length > maxLen) {
                    lines.push(currentLine.trim());
                    currentLine = word;
                } else {
                    currentLine = (currentLine + ' ' + word).trim();
                }
            }
            if (currentLine) lines.push(currentLine.trim());
            return lines;
        }

        const tooltipTitleCallback = (tooltipItems) => {
            const item = tooltipItems[0];
            let label = item.chart.data.labels[item.dataIndex];
            return Array.isArray(label) ? label.join(' ') : label;
        };
        
        const commonChartOptions = {
            responsive: true,
            maintainAspectRatio: false,
            animation: {
                duration: 0
            },
            plugins: {
                legend: {
                    labels: {
                        color: calmConfidencePalette.text,
                        font: { family: "'Inter', sans-serif" }
                    }
                },
                tooltip: {
                    enabled: true,
                    backgroundColor: calmConfidencePalette.primary,
                    titleFont: { size: 14, family: "'Inter', sans-serif" },
                    bodyFont: { size: 12, family: "'Inter', sans-serif" },
                    padding: 10,
                    callbacks: { title: tooltipTitleCallback }
                }
            },
            scales: {
                y: { ticks: { color: calmConfidencePalette.textLight }, grid: { color: '#e2e8f0' } },
                x: { ticks: { color: calmConfidencePalette.textLight }, grid: { display: false } }
            }
        };

        const calculateButton = document.getElementById('calculate-fire');
        const spendingInput = document.getElementById('annual-spending');
        const fireNumberEl = document.getElementById('fire-number');
        
        const updateFireNumber = () => {
             const spending = parseFloat(spendingInput.value) || 480000;
             const fireNumber = spending * 25;
             fireNumberEl.textContent = `${fireNumber.toLocaleString('tr-TR')} TL`;
        };
        
        calculateButton.addEventListener('click', updateFireNumber);
        spendingInput.addEventListener('keyup', (event) => {
            if (event.key === 'Enter') {
                updateFireNumber();
            }
        });

        // --- Charts ---
        
        const leanVsFatCtx = document.getElementById('leanVsFatChart').getContext('2d');
        new Chart(leanVsFatCtx, {
            type: 'bar',
            data: {
                labels: ['LeanFIRE', 'FatFIRE'],
                datasets: [{
                    label: 'Hedef Birikim (Milyon TL)',
                    data: [1.5, 15],
                    backgroundColor: [calmConfidencePalette.secondary, calmConfidencePalette.primary],
                    borderWidth: 0
                }]
            },
            options: { ...commonChartOptions, scales: { y: { ticks: { callback: value => value + 'M' } } } }
        });
        
        const baristaFireCtx = document.getElementById('baristaFireChart').getContext('2d');
        new Chart(baristaFireCtx, {
            type: 'doughnut',
            data: {
                labels: ['Yatırım Gelirleri', 'Yarı Zamanlı İş Geliri'],
                datasets: [{
                    data: [65, 35],
                    backgroundColor: [calmConfidencePalette.primary, calmConfidencePalette.accent],
                    borderColor: calmConfidencePalette.neutral,
                    borderWidth: 4,
                    hoverOffset: 4
                }]
            },
            options: {
                 responsive: true,
                 maintainAspectRatio: false,
                 animation: { duration: 0 },
                 plugins: {
                    legend: { position: 'top', labels: { color: calmConfidencePalette.text, font: { family: "'Inter', sans-serif" }} },
                    tooltip: { ...commonChartOptions.plugins.tooltip }
                 }
            }
        });

        const coastFireCtx = document.getElementById('coastFireChart').getContext('2d');
        new Chart(coastFireCtx, {
            type: 'line',
            data: {
                labels: Array.from({length: 36}, (_, i) => 30 + i),
                datasets: [{
                    label: 'Portföy Değeri',
                    data: Array.from({length: 36}, (_, i) => 750000 * Math.pow(1.05, i)),
                    fill: true,
                    borderColor: calmConfidencePalette.secondary,
                    backgroundColor: 'rgba(74, 124, 89, 0.1)',
                    tension: 0.1,
                    pointRadius: 0,
                }]
            },
            options: { ...commonChartOptions, scales: { y: { ticks: { callback: value => (value / 1000000).toFixed(1) + 'M' } } } }
        });
        
        const portfolioCtx = document.getElementById('portfolioChart').getContext('2d');
        new Chart(portfolioCtx, {
            type: 'radar',
            data: {
                labels: [wrapLabel('BİST Hisse/Fon'), wrapLabel('Yabancı Hisse/ETF'), 'Altın', 'Döviz', 'Gayrimenkul (GYO)', wrapLabel('BES Fonları')],
                datasets: [{
                    label: 'Örnek Portföy Dağılımı (%)',
                    data: [30, 20, 15, 10, 15, 10],
                    fill: true,
                    backgroundColor: 'rgba(255, 107, 107, 0.2)',
                    borderColor: calmConfidencePalette.accentStrong,
                    pointBackgroundColor: calmConfidencePalette.accentStrong,
                    pointBorderColor: calmConfidencePalette.white,
                }]
            },
            options: {
                responsive: true, maintainAspectRatio: false, animation: { duration: 0 },
                plugins: { legend: { display: false }, tooltip: { ...commonChartOptions.plugins.tooltip } },
                scales: {
                    r: {
                        angleLines: { color: '#d1d5db' }, grid: { color: '#e5e7eb' },
                        pointLabels: { color: calmConfidencePalette.text, font: { size: 12, family: "'Inter', sans-serif" } },
                        ticks: {
                            color: calmConfidencePalette.white,
                            backdropColor: 'rgba(74, 124, 89, 0.7)',
                            stepSize: 10,
                            callback: value => value + '%'
                        }
                    }
                }
            }
        });
        updateFireNumber();
    });
</script>
</body>
</html>
